<?php

function intosent($text){
  
  $text_arr = preg_split('/\.\s+\n*([А-ЯA-Z])/u',$text,-1, PREG_SPLIT_NO_EMPTY | PREG_SPLIT_DELIM_CAPTURE);

  foreach($text_arr as &$t){
    if(strlen($t)<3) {
      $b =$t;
      $t='';
    }
    else 
      $t=$b.$t;
 }
 
 return array_diff($text_arr, array(''));
}
?>
